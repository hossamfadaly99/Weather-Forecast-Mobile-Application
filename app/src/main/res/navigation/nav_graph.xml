<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.fadalyis.weatherforecastapplication.Home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <argument
            android:name="mapLatLon"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_homeFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" >
            <argument
                android:name="previousDestination"
                android:defaultValue="home" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.fadalyis.weatherforecastapplication.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" >
            <argument
                android:name="previousDestination"
                android:defaultValue="favorite" />
        </action>
        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment" >
            <argument
                android:name="mapLatLon"
                android:defaultValue="@null" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/alertFragment"
        android:name="com.fadalyis.weatherforecastapplication.alert.AlertFragment"
        android:label="fragment_alert"
        tools:layout="@layout/fragment_alert" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.fadalyis.weatherforecastapplication.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.navigationcomponent.MapsFragment"
        android:label="MapsFragment" >
        <action
            android:id="@+id/action_mapsFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/favoriteFragment" />
        <action
            android:id="@+id/action_mapsFragment_to_homeFragment"
            app:destination="@id/homeFragment" >
            <argument
                android:name="mapLatLon"
                android:defaultValue="@null" />
        </action>
        <argument
            android:name="previousDestination"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>